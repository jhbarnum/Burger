<div class="container" >
    <div class="row">
        <div class="col-md-6">
            <h2>Eat Me...</h2>
                <ul>
                    {{#each burgers}} {{#unless devoured}} 
                        <li>
                            <h5>{{id}}. {{burger_name}}
                                <button class="eat-burger" data-id="{{this.id}}">Eat Me!</button>
                            </h5>
                        </li>
                    {{/unless}} {{/each}}
                </ul>
        </div>
        <div class="col-md-6">
            <h2>Devoured Burgers... Yum</h2>
                <ul>
                    {{#each burgers}} {{#if devoured}} 
                        <li>
                            <h5>{{id}}. {{burger_name}}
                            <button class="delete-burger" data-id="{{this.id}}">Delete!</button>
                            </h5>
                        </li>
                    {{/if}} {{/each}}
                </ul>
        </div>
    </div>
</div>

<div class="container" style="text-align: center">
    <div class="row">
        <div class="col-md-12">
            <h2>Add a Burger</h2>
                <form class="create-form">
                    <div class="form-group">
                        <label for="ca">Burger Name:</label>
                        <input type="text" id="ca" name="burger_name">
                    </div>
                    <button class="btn btn-primary" type="submit">Add A Burger</button>
                </form>
        </div>
    </div>
</div>