<h1>Burgers</h1>

<h2>Eat Me...</h2>

<ul>
    {{#each burgers}} {{#unless devoured}} 
    <li>
        <h5>{{id}}. {{burger_name}}
            <button class="eat-burger" data-id="{{this.id}}">Eat Me!</button>
        </h5>
    </li>
     {{/unless}} {{/each}}
</ul>

<h2>Devoured Burgers... Yum</h2>

<ul>
    {{#each burgers}} {{#if devoured}} 
    <li>
        <h5>{{id}}. {{burger_name}}</h5>
    </li>
    {{/if}} {{/each}}
</ul>

<h2>Add a Burg</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="burger_name">
    </div>

   

    <button class="btn btn-primary" type="submit">Add A Burger</button>

</form>